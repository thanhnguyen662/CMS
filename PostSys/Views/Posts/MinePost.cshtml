@model IEnumerable<PostSys.Models.Post>

@{
	ViewBag.Title = "MinePost";
}

<h2>MinePost</h2>

@using (Html.BeginForm("MinePost", "Posts", FormMethod.Get))
{

	<table class="table table-hover">
		<tr>
			<th>Student Name</th>
			<th>Course Name</th>
			<th>Delete</th>
			<th>Show Comment</th>
		</tr>
		@foreach (var item in Model)
		{
			<tr>
				<th>@item.Course.Student.UserName</th>
				<th>@item.Course.Name</th>
				<th>@Html.ActionLink("Delete", "Delete", new { id = item.Id })</th>
				<th>@Html.ActionLink("Show Comment", "ShowComment", new { id = item.Id })</th>
			</tr>
		}
	</table>
}