@model IEnumerable<PostSys.Models.Course>
@{
	ViewBag.Title = "ManageMineCourse";
}

<h2>ManageMineCourse</h2>


@using (Html.BeginForm("ManageMineCourse", "Courses", FormMethod.Get))
{
	{
		<table class="table table-hover">
			<tr>
				<th>Course Name</th>
				<th>Class Name</th>
				<th>Username</th>
				<th>StartDate</th>
				<th>EndDate</th>
				<th>Delete</th>
			</tr>
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.Name</td>
					<td>@item.Class.Name</td>
					<td>@item.Class.Coordinator.UserName</td>
					<td>@item.StartDate</td>
					<td>@item.EndDate</td>
					<td>@Html.ActionLink("Delete", "DeleteManageMineCourse", new { id = item.Id })</td>
				</tr>
			}
		</table>
	}
}
